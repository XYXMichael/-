page{
   background: linear-gradient(220.55deg, #8FFF85 0%, #39A0FF 100%);
}
.container{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 80rpx;
}
.info-box{
  width: 100%;
  height: 100;
  border-radius: 24rpx;
  background-color: #fff;
  padding: 30rpx 30rpx 0;
}
.course-title{
  font-size: 45rpx;
  color: #333333;
}
.info-list{
  margin-top: 10rpx;
}
.info-item{
  display: flex;
  font-size: 35rpx;
  font-family: "华文中宋";
  align-items: center;
  padding: 24rpx 0rpx;
}
.info-item:not(:last-child){
  border-bottom: 1rpx solid rgba(243,243,243,0.82);
}
.info-item_key{
  color:#39A0FF;
  margin-right: 50rpx;
}
.info-item_val{
  color: #666666;
}