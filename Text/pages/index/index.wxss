page{
  background-color: #faf0ff;
}
.container{
  padding: 48rpx 20rpx;
}
.logo{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-list{
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: cornsilk;
  box-shadow: 0rpx 0rpx 24rpx -4rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 40rpx;
  margin-top: 46rpx;
}
.nav-item{
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.nav-item image{
  width:84rpx;
  height: 84rpx;
}
.nav-title{
  font-size: 24rpx;
  color: #b63fac;
  margin-top: 8rpx;
}
.today-course{
  width: 100%;
  border-radius: 24rpx;
  background: cornsilk;
  box-shadow: 0 rpx 0rpx 24 rpx -4rpx rgba(0,0,0,0.1);
  margin-top: 30rpx;
  padding:30rpx;
}
.course-option{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}
.option-title{
  font-size: 40rpx;
  color: #3e9c96;
  font-weight: 1000;
  font-style: italic;
}
.option-time{
  font-size: 26rpx;
  color: #666666;
}
.course-box{
  margin-top: 10rpx;
}
.course-box .empty-img{
  width: 264rpx;
  height: 138rpx;
}
.empty-title{
  font-size: 26rpx;
  color: #999999;
  margin-top: 50rpx;
}
.empty-course{
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.course-list{
  width:100%
}
.course-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.course-item:not(:last-child){
  border-bottom: 2rpx solid #b9b2b2;
}
.course-name{
  color:#3D3D3D;
}
.course-address{
  font-size: 24rpx;
  color:#0aa9d1
}