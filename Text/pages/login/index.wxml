<view class="container">
  <view class="header">
    <image src="/image/download/logo.png" mode="aspectFill"></image>
  </view>
  <view class="login">
    <view class="form-item">
      <image src="/image/download/用户.png" mode="aspectFill"></image>
      <input type="test" model:value="{{stuId}}"
        class = "input" placeholder="请输入学号"/>
      </view>
    <view class="form-item">
      <image src="/image/download/password.png" mode="aspectFill"></image>
      <input type="password" model:value="{{password}}"
      class = "input" placeholder="请输入密码"/>
    </view>
    <view class="checkbox-item">
      <checkbox class="theme" checked="{{saveCount}}"></checkbox>
      <view class="margin-left-sm">记住账号密码(仅本地存储)</view>
    </view>
    <button bindtap="login">登录</button>
  </view>
</view>
